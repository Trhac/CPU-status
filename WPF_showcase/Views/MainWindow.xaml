<Window x:Class="WPF_showcase.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_showcase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="127,98,0,0" TextWrapping="Wrap" Text="{Binding ActualStatus.Temperature}" VerticalAlignment="Top" Width="50"/>
        <Label Content="Temp" HorizontalAlignment="Left" Margin="84,88,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.434,1.652"/>
        <TextBlock HorizontalAlignment="Left" Margin="127,128,0,0" TextWrapping="Wrap" Text="{Binding ActualStatus.Load}" VerticalAlignment="Top" Width="50"/>
        <Label Content="Load" HorizontalAlignment="Left" Margin="84,118,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.434,1.652"/>
        <TextBlock HorizontalAlignment="Left" Margin="127,158,0,0" TextWrapping="Wrap" Text="{Binding ActualStatus.Clock}" VerticalAlignment="Top" Width="50"/>
        <Label Content="Clock" HorizontalAlignment="Left" Margin="84,148,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.434,1.652"/>

    </Grid>
</Window>
